<h1><%=@cocktail.name%></h1>

<%# Show the doses for this drink %>
<% @cocktail.doses.each do |dose| %>
  <li><%="#{dose.description} of #{dose.ingredient.name}"%></li>
  <%= link_to "❌", dose_path(dose.id), method: :delete%>
<% end %>

<%= link_to "Back to Cocktails", cocktails_path%>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail.id)%>





