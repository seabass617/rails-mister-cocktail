<div class="container text-center">
  <h1 class= "mb-4">Cocktails</h1>

  
  <% @cocktails.each do |cocktail| %>
  <div class="card mb-2">
      <%=link_to cocktail.name, cocktail_path(cocktail.id)%>
  </div>
  <% end %>


  <h3><%=link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary mt-3"%></h3>
</div>